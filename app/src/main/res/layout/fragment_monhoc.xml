<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroundwhite_radius16"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUẢN LÝ MÔN HỌC"
        android:textSize="24dp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/bg_radius_top_lr"
        android:padding="12dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/radius_14_border_gray"
        android:layout_margin="10dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Mã môn:"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/mamon_MH"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/radius_14_border_gray"
        android:layout_margin="10dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tên môn:"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/tenmon_MH"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/radius_14_border_gray"
        android:layout_margin="10dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Số tín chỉ:"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/tinchi_MH"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Nhập số"
           />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/radius_14_border_gray"
        android:layout_margin="10dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Học kỳ:"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/hocky_MH"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Nhập số"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnXoaTrang_MH"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:alpha="0.6"
            android:background="@drawable/bg_yellow_radius_10"
            android:text="XÓA TRẮNG"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:backgroundTint="@color/gray" />

        <Button
            android:id="@+id/btnXacNhan_MH"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_yellow_radius_10"
            android:text="XÁC NHẬN"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:backgroundTint="@color/green" />

    </LinearLayout>
    <Button
        android:id="@+id/xemdanhsach_MH"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="Danh sách Môn học" />
</LinearLayout>