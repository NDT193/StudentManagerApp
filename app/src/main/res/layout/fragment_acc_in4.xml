<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_lightblue_radius_bottom"
        android:layout_marginBottom="50dp">
        <ImageView
            android:layout_width="400px"
            android:layout_height="400px"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_blue_radius_circle"
            android:src="@drawable/tt_main"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/radius_14_border_gray"
        android:orientation="vertical">
        <ImageView
            android:layout_width="150px"
            android:layout_height="150px"
            android:src="@drawable/ca_nhan"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line_gray"
            android:layout_margin="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@drawable/tt_hoten"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Họ tên:"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Admin"
                android:textSize="20dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line_gray"
            android:layout_margin="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@drawable/tt_trangthai"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Trạng thái:"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Normal"
                android:textSize="20dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line_gray"
            android:layout_margin="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@drawable/tt_ngaysinh"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Ngày sinh:"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="30/2/2000"
                android:textSize="20dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line_gray"
            android:layout_margin="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@drawable/tt_gioitinh"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Giới tính:"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Nam"
                android:textSize="20dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line_gray"
            android:layout_margin="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@drawable/tt_email"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Email:"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="admin@gmail.com"
                android:textSize="20dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line_gray"
            android:layout_margin="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@drawable/tt_sdt"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="SĐT:"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="0818xxxx05"
                android:textSize="20dp"
                android:gravity="right"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line_gray"
            android:layout_margin="8dp"/>
    </LinearLayout>
</LinearLayout>