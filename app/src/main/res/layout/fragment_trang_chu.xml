<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_radius_top_lr">

        <ImageView
            android:layout_width="150px"
            android:layout_height="150px"
            android:src="@drawable/home"
            android:background="@color/yellow"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Trang Chủ"
            android:textSize="26dp"
            android:textStyle="bold"
            android:textColor="#F45656"
            android:padding="10dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#37A0F4"
        android:layout_marginTop="10dp"/>

    <ViewFlipper
        android:layout_width="1050px"
        android:layout_height="600px"
        android:layout_gravity="center"
        android:background="@drawable/radius_14_border_gray"
        android:layout_marginTop="10dp"
        android:flipInterval="4000"
        android:autoStart="true"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right"
        >
        <ImageView
            android:layout_width="1040px"
            android:layout_height="590px"
            android:layout_gravity="center"
            android:background="@drawable/backgroundwhite_radius16"
            android:src="@drawable/slide1"/>
        <ImageView
            android:layout_width="1040px"
            android:layout_height="590px"
            android:layout_gravity="center"
            android:background="@drawable/backgroundwhite_radius16"
            android:src="@drawable/slide2"/>
        <ImageView
            android:layout_width="1040px"
            android:layout_height="590px"
            android:layout_gravity="center"
            android:background="@drawable/backgroundwhite_radius16"
            android:src="@drawable/slide3"/>
    </ViewFlipper>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tin tức - Sự kiện"
        android:textColor="#F45656"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/radius_14_border_gray"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="4dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="592px"
        android:src="@drawable/tintuc_trangchu"/>
</LinearLayout>